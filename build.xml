<project>
    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/WPApplication.jar" basedir="build/classes">
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/WPApplication.jar" fork="true"/>
    </target>
</project>
